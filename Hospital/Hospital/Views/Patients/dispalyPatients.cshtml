﻿<div class="row">
    <div class="col-9 mb-3">
        <h2>All Patents</h2>
    </div>
</div>

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">pation Id</th>
                <th scope="col">pation Name</th>
                <th scope="col">doctor name</th>
                <th scope="col">date</th>
                <th scope="col">time</th>

            </tr>
        </thead>
        <tbody>
            @{int num = 1;
            }
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <th scope="row">@num</th>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.DoctorName</td>
                    <td>@item.Date</td>
                    <td>@item.Time</td>
                </tr>
                ++num;
            }
        </tbody>
    </table>
</div>
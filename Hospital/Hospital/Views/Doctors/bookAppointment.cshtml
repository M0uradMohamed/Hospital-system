<div class="text-center">
    <h1 class="display-4">Book Appointment</h1>
    <div class="row">
    </div>
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="~/images/@item.Img" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Specialization @item.Specialization</p>
                        <a href="/doctors/completeAppointment?drname=@item.Name" class="btn btn-primary">book appointment</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>